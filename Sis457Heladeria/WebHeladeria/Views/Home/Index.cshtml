<!-- CONTACTO - HELADERÍA EL ARTE -->
<div id="contacto" class="contact_section py-5" style="background: #fff5fa;">
    <div class="container">

        <div class="row align-items-start">

            <!-- FORMULARIO -->
            <div class="col-md-5">
                <h2 class="mb-4" style="color:#8B005D; font-weight:700;">Contáctanos</h2>

                <form>
                    <div class="form-group mb-3">
                        <input type="text" class="form-control p-3"
                               placeholder="Nombre completo">
                    </div>

                    <div class="form-group mb-3">
                        <input type="email" class="form-control p-3"
                               placeholder="Correo electrónico">
                    </div>

                    <div class="form-group mb-3">
                        <input type="text" class="form-control p-3"
                               placeholder="Teléfono">
                    </div>

                    <div class="form-group mb-3">
                        <textarea class="form-control p-3" rows="5"
                                  placeholder="Escribe tu mensaje"></textarea>
                    </div>

                    <button type="submit"
                            class="btn btn-lg w-100"
                            style="background:#8B005D; color:white; border-radius:10px;">
                        Enviar mensaje
                    </button>
                </form>
            </div>

            <!-- INFORMACIÓN + BOLETÍN + REDES -->
            <div class="col-md-7 mt-5 mt-md-0">

                <!-- INFORMACIÓN -->
                <div class="p-4 mb-4"
                     style="background:white; border-radius:15px; box-shadow:0 3px 10px rgba(0,0,0,0.1);">

                    <h4 class="mb-4" style="color:#8B005D;">Información de contacto</h4>

                    <ul class="list-unstyled">
                        <li class="mb-3">
                            <i class="fa fa-map-marker me-2" style="color:#8B005D;"></i>
                            <strong>Dirección:</strong> Avenida el Maestro Nro. 57
                        </li>

                        <li class="mb-3">
                            <i class="fa fa-phone me-2" style="color:#8B005D;"></i>
                            <strong>Teléfono:</strong> +591 78645212
                        </li>

                        <li>
                            <i class="fa fa-envelope me-2" style="color:#8B005D;"></i>
                            <strong>Email:</strong> contacto@heladeriaelarte.com
                        </li>
                    </ul>
                </div>

                <!-- BOLETÍN -->
                <div class="p-4 mb-4"
                     style="background:white; border-radius:15px; box-shadow:0 3px 10px rgba(0,0,0,0.1);">

                    <h5 class="mb-3" style="color:#8B005D; font-weight:600;">
                        Boletín de novedades
                    </h5>

                    <div class="d-flex">
                        <input type="email" class="form-control p-3 me-2"
                               placeholder="Ingresa tu correo">
                        <button class="btn px-4"
                                style="background:#8B005D; color:white; border-radius:10px;">
                            Suscribirse
                        </button>
                    </div>
                </div>

                <!-- REDES SOCIALES -->
                <div class="text-center mb-4">
                    <ul class="list-inline">
                        <li class="list-inline-item mx-2">
                            <a href="#"><i class="fa fa-facebook"
                                           style="font-size:28px; color:#8B005D;"></i></a>
                        </li>
                        <li class="list-inline-item mx-2">
                            <a href="#"><i class="fa fa-instagram"
                                           style="font-size:28px; color:#8B005D;"></i></a>
                        </li>
                        <li class="list-inline-item mx-2">
                            <a href="#"><i class="fa fa-twitter"
                                           style="font-size:28px; color:#8B005D;"></i></a>
                        </li>
                        <li class="list-inline-item mx-2">
                            <a href="#"><i class="fa fa-whatsapp"
                                           style="font-size:28px; color:#8B005D;"></i></a>
                        </li>
                    </ul>
                </div>

            </div>

        </div>

        <!-- MAPA -->
        <div class="row mt-5">
            <div class="col-12">
                <h3 class="mb-3" style="color:#8B005D; font-weight:600;">Nuestra ubicación</h3>

                <div style="border-radius:15px; overflow:hidden; box-shadow:0 3px 10px rgba(0,0,0,0.2);">
                    <iframe 
                        src="https://www.google.com/maps?q=Avenida%20el%20Maestro%2057%20Bolivia&output=embed"
                        width="100%"
                        height="380"
                        frameborder="0"
                        style="border:0;"
                        allowfullscreen="">
                    </iframe>
                </div>
            </div>
        </div>

    </div>
</div>

