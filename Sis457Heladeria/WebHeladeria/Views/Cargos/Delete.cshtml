@model WebHeladeria.Models.Cargo

@{
    ViewData["Title"] = "Eliminar Cargo";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <div class="card p-4" style="max-width:700px; margin:auto; background:#fff0f5; border:1px solid #dc3545;">
        <h2 class="text-center mb-4 text-danger">Eliminar Cargo</h2>

        <dl class="row">
            <dt class="col-sm-4">Descripción</dt>
            <dd class="col-sm-8">@Model.Descripcion</dd>

            <dt class="col-sm-4">Usuario Registro</dt>
            <dd class="col-sm-8">@Model.UsuarioRegistro</dd>

            <dt class="col-sm-4">Fecha Registro</dt>
            <dd class="col-sm-8">@Model.FechaRegistro.ToString("dd/MM/yyyy HH:mm")</dd>
        </dl>

        <form asp-action="Delete" method="post" class="text-center mt-4">
            @Html.AntiForgeryToken()
            <input type="hidden" asp-for="Id" />
            <button type="submit" class="btn btn-danger me-2">Eliminar</button>
            <a asp-action="Index" class="btn btn-outline-secondary">Volver</a>
        </form>
    </div>
</div>
