@model WebHeladeria.Models.Cargo

@{
    ViewData["Title"] = "Detalles Cargo";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <div class="card p-4" style="max-width:700px; margin:auto; background:#fff0f5;">
        <h2 class="text-center mb-4">Detalles del Cargo</h2>
        <dl class="row">
            <dt class="col-sm-4">Descripción</dt>
            <dd class="col-sm-8">@Model.Descripcion</dd>

            <dt class="col-sm-4">Usuario Registro</dt>
            <dd class="col-sm-8">@Model.UsuarioRegistro</dd>

            <dt class="col-sm-4">Fecha Registro</dt>
            <dd class="col-sm-8">@Model.FechaRegistro.ToString("dd/MM/yyyy HH:mm")</dd>

            <dt class="col-sm-4">Estado</dt>
            <dd class="col-sm-8">@(Model.Estado == 1 ? "Activo" : "Inactivo")</dd>
        </dl>

        <div class="text-end">
            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary me-2">Editar</a>
            <a asp-action="Index" class="btn btn-outline-secondary">Volver</a>
        </div>
    </div>
</div>
