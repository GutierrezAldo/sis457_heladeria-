@model WebHeladeria.Models.Empleado

@{
    ViewData["Title"] = "Editar Empleado";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5 mb-5">
    <div class="card shadow-sm rounded" style="max-width: 700px; margin: auto; background-color: #fff0f5;">
        <div class="card-body p-4">
            <h2 class="card-title text-center mb-4" style="color: #f497b6;">
                <i class="fa fa-user-edit"></i> Editar Empleado
            </h2>

            @if (!ViewData.ModelState.IsValid)
            {
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    <strong><i class="fa fa-exclamation-triangle"></i> Error de validación:</strong>
                    <ul class="mb-0 mt-2">
                        @foreach (var modelState in ViewData.ModelState.Values)
                        {
                            @foreach (var error in modelState.Errors)
                            {
                                <li>@error.ErrorMessage</li>
                            }
                        }
                    </ul>
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }

            <form asp-action="Edit" asp-route-id="@Model.Id" method="post">
                @Html.AntiForgeryToken()
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <!-- Campos ocultos para preservar datos de auditoría -->
                <input type="hidden" asp-for="Id" />
                <input type="hidden" asp-for="UsuarioRegistro" />
                <input type="hidden" asp-for="FechaRegistro" />
                <input type="hidden" asp-for="Estado" />

                <!-- Información de auditoría (solo lectura) -->
                <div class="alert alert-secondary" role="alert">
                    <small>
                        <i class="fa fa-info-circle"></i>
                        <strong>Registro creado por:</strong> @Model.UsuarioRegistro
                        <strong>el</strong> @(Model.FechaRegistro?.ToString("dd/MM/yyyy HH:mm") ?? "N/A")
                    </small>
                </div>

                <!-- Nombres -->
                <div class="form-group mb-3">
                    <label asp-for="Nombres" class="form-label fw-bold">
                        <i class="fa fa-user"></i> Nombres: <span class="text-danger">*</span>
                    </label>
                    <input asp-for="Nombres" class="form-control" placeholder="Ingrese los nombres" />
                    <span asp-validation-for="Nombres" class="text-danger small"></span>
                </div>

                <!-- Primer Apellido -->
                <div class="form-group mb-3">
                    <label asp-for="PrimerApellido" class="form-label fw-bold">
                        <i class="fa fa-id-card"></i> Primer Apellido: <span class="text-danger">*</span>
                    </label>
                    <input asp-for="PrimerApellido" class="form-control" placeholder="Ingrese el primer apellido" />
                    <span asp-validation-for="PrimerApellido" class="text-danger small"></span>
                </div>

                <!-- Segundo Apellido -->
                <div class="form-group mb-3">
                    <label asp-for="SegundoApellido" class="form-label fw-bold">
                        <i class="fa fa-id-card"></i> Segundo Apellido:
                    </label>
                    <input asp-for="SegundoApellido" class="form-control"
                        placeholder="Ingrese el segundo apellido (opcional)" />
                    <span asp-validation-for="SegundoApellido" class="text-danger small"></span>
                </div>

                <!-- Teléfono -->
                <div class="form-group mb-3">
                    <label asp-for="Telefono" class="form-label fw-bold">
                        <i class="fa fa-phone"></i> Teléfono: <span class="text-danger">*</span>
                    </label>
                    <input asp-for="Telefono" class="form-control" type="tel" placeholder="Ej: 71234567" />
                    <span asp-validation-for="Telefono" class="text-danger small"></span>
                </div>

                <!-- Dirección -->
                <div class="form-group mb-3">
                    <label asp-for="Direccion" class="form-label fw-bold">
                        <i class="fa fa-map-marker-alt"></i> Dirección: <span class="text-danger">*</span>
                    </label>
                    <textarea asp-for="Direccion" class="form-control" rows="2"
                        placeholder="Ingrese la dirección completa"></textarea>
                    <span asp-validation-for="Direccion" class="text-danger small"></span>
                </div>

                <!-- Cargo -->
                <div class="form-group mb-3">
                    <label asp-for="IdCargo" class="form-label fw-bold">
                        <i class="fa fa-briefcase"></i> Cargo: <span class="text-danger">*</span>
                    </label>
                    <select asp-for="IdCargo" class="form-control" asp-items="@(ViewData["IdCargo"] as SelectList)">
                        <option value="">-- Seleccione un cargo --</option>
                    </select>
                    <span asp-validation-for="IdCargo" class="text-danger small"></span>
                </div>

                <div class="alert alert-info" role="alert">
                    <i class="fa fa-info-circle"></i> Los campos marcados con <span class="text-danger">*</span> son
                    obligatorios.
                </div>

                <!-- Botones -->
                <div class="d-flex justify-content-between mt-4">
                    <a asp-action="Index" class="btn btn-outline-secondary">
                        <i class="fa fa-arrow-left"></i> Volver a Lista
                    </a>
                    <button type="submit" class="btn text-white" style="background-color: #f497b6;">
                        <i class="fa fa-save"></i> Guardar Cambios
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}