@model WebHeladeria.Models.Empleado

@{
    ViewData["Title"] = "Editar Empleado";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5 mb-5">
    <div class="card shadow-sm rounded" style="max-width: 700px; margin: auto; background-color: #fff0f5;">
        <div class="card-body">
            <h2 class="card-title text-center mb-4 text-primary">
                <i class="fa fa-user-edit"></i> Editar Empleado
            </h2>

            @if (!ViewData.ModelState.IsValid)
            {
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    <strong>Error de validación:</strong>
                    <ul class="mb-0">
                        @foreach (var modelState in ViewData.ModelState.Values)
                        {
                            @foreach (var error in modelState.Errors)
                            {
                                <li>@error.ErrorMessage</li>
                            }
                        }
                    </ul>
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }

            <form asp-action="Edit" asp-route-id="@Model.Id" method="post">
                @Html.AntiForgeryToken()
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <!-- Campos ocultos -->
                <input type="hidden" asp-for="Id" />
                <input type="hidden" asp-for="UsuarioRegistro" />
                <input type="hidden" asp-for="FechaRegistro" />
                <input type="hidden" asp-for="Estado" />

                <!-- Nombres -->
                <div class="form-group mb-3">
                    <label asp-for="Nombres" class="form-label">Nombres:</label>
                    <input asp-for="Nombres" class="form-control" />
                    <span asp-validation-for="Nombres" class="text-danger"></span>
                </div>

                <!-- Primer Apellido -->
                <div class="form-group mb-3">
                    <label asp-for="PrimerApellido" class="form-label">Primer Apellido:</label>
                    <input asp-for="PrimerApellido" class="form-control" />
                    <span asp-validation-for="PrimerApellido" class="text-danger"></span>
                </div>

                <!-- Segundo Apellido -->
                <div class="form-group mb-3">
                    <label asp-for="SegundoApellido" class="form-label">Segundo Apellido:</label>
                    <input asp-for="SegundoApellido" class="form-control" />
                    <span asp-validation-for="SegundoApellido" class="text-danger"></span>
                </div>

                <!-- Teléfono -->
                <div class="form-group mb-3">
                    <label asp-for="Telefono" class="form-label">Teléfono:</label>
                    <input asp-for="Telefono" class="form-control" type="tel" />
                    <span asp-validation-for="Telefono" class="text-danger"></span>
                </div>

                <!-- Dirección -->
                <div class="form-group mb-3">
                    <label asp-for="Direccion" class="form-label">Dirección:</label>
                    <input asp-for="Direccion" class="form-control" />
                    <span asp-validation-for="Direccion" class="text-danger"></span>
                </div>

                <!-- Cargo -->
                <div class="form-group mb-3">
                    <label asp-for="IdCargo" class="form-label">Cargo:</label>
                    <select asp-for="IdCargo" class="form-control" asp-items="@((SelectList)ViewData["IdCargo"])">
                        <option value="">-- Seleccione un cargo --</option>
                    </select>
                    <span asp-validation-for="IdCargo" class="text-danger"></span>
                </div>

                <!-- Botones -->
                <div class="text-end mt-4">
                    <a asp-action="Index" class="btn btn-outline-secondary me-2">
                        <i class="fa fa-arrow-left"></i> Volver
                    </a>
                    <button type="submit" class="btn btn-primary">
                        <i class="fa fa-save"></i> Guardar Cambios
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}