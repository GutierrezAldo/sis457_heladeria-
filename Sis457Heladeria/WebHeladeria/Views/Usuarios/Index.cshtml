@model IEnumerable<WebHeladeria.Models.Usuario>

@{
    ViewData["Title"] = "Lista de Usuarios";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container d-flex flex-column mt-5 mb-5" style="max-width: 900px;">

    <h2 class="mb-4 text-center text-dark">
        <i class="fa fa-users me-2"></i> Lista de Usuarios
    </h2>

    <div class="text-end mb-3">
        <a asp-action="Create" class="btn text-white"
           style="background-color: #f497b6; border-color: #f497b6;">
            <i class="fa fa-plus-circle"></i> Crear Nuevo
        </a>
    </div>

    <div class="card shadow rounded p-4" style="background-color: #fff0f5;">
        <table class="table table-hover align-middle">
            <thead style="background-color: #ffe4ef;">
                <tr>
                    <th>@Html.DisplayNameFor(model => model.Usuario1)</th>
                    <th>Empleado</th>
                    <th>@Html.DisplayNameFor(model => model.FechaRegistro)</th>
                    <th class="text-end">Acciones</th>
                </tr>
            </thead>

            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(m => item.Usuario1)</td>
                        <td>
                            @if (item.IdEmpleadoNavigation != null)
                            {
                                @(item.IdEmpleadoNavigation.Nombres + " " + item.IdEmpleadoNavigation.PrimerApellido)
                            }
                        </td>
                        <td>@Html.DisplayFor(m => item.FechaRegistro)</td>

                        <td class="text-end">
                            <a asp-action="Edit" asp-route-id="@item.Id"
                               class="btn btn-sm btn-outline-info me-1" title="Editar">
                                <i class="fa fa-edit"></i>
                            </a>
                            <a asp-action="Details" asp-route-id="@item.Id"
                               class="btn btn-sm btn-outline-primary me-1" title="Detalles">
                                <i class="fa fa-info-circle"></i>
                            </a>
                            <a asp-action="Delete" asp-route-id="@item.Id"
                               class="btn btn-sm btn-outline-danger" title="Eliminar">
                                <i class="fa fa-trash"></i>
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
