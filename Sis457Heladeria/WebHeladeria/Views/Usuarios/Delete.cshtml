@model WebHeladeria.Models.Usuario

@{
    ViewData["Title"] = "Eliminar Usuario";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container d-flex justify-content-center mt-5 mb-5">
    <div class="card shadow p-4 rounded w-100" style="max-width: 700px; background-color: #fff0f5;">

        <h2 class="mb-3 text-center" style="color: #B00040;">
            <i class="fa fa-trash me-2"></i> Eliminar Usuario
        </h2>

        <h5 class="text-center mb-4" style="color: #8B005D;">
            ¿Está seguro que desea eliminar este registro?
        </h5>

        <dl class="row">
            <dt class="col-sm-4 fw-bold">Usuario:</dt>
            <dd class="col-sm-8">@Html.DisplayFor(m => m.Usuario1)</dd>

            <dt class="col-sm-4 fw-bold">Clave:</dt>
            <dd class="col-sm-8">@Html.DisplayFor(m => m.Clave)</dd>

            <dt class="col-sm-4 fw-bold">Usuario Registro:</dt>
            <dd class="col-sm-8">@Html.DisplayFor(m => m.UsuarioRegistro)</dd>

            <dt class="col-sm-4 fw-bold">Fecha Registro:</dt>
            <dd class="col-sm-8">@Html.DisplayFor(m => m.FechaRegistro)</dd>

            <dt class="col-sm-4 fw-bold">Estado:</dt>
            <dd class="col-sm-8">
                @(Model.Estado == 1 ? "Activo" : "Inactivo")
            </dd>

            <dt class="col-sm-4 fw-bold">Empleado:</dt>
            <dd class="col-sm-8">
                @if (Model.IdEmpleadoNavigation != null)
                {
                    @(Model.IdEmpleadoNavigation.Nombres + " " + Model.IdEmpleadoNavigation.PrimerApellido)
                }
            </dd>
        </dl>

        <form asp-action="Delete" class="text-end mt-4">
            <input type="hidden" asp-for="Id" />

            <button type="submit" class="btn text-white me-2"
                    style="background-color: #d9534f; border-color: #d9534f;">
                <i class="fa fa-trash"></i> Eliminar
            </button>

            <a asp-action="Index" class="btn btn-outline-secondary">
                <i class="fa fa-arrow-left"></i> Cancelar
            </a>
        </form>

    </div>
</div>
